<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".disturbing.DisturbingActivity">

    <androidx.appcompat.widget.Toolbar
        android:id="@+id/a_disturbing_toolbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="70dp"
        android:src="@drawable/bg_disturbing" />

    <com.depromeet.plzdisturb.custom.DisturbingView
        android:id="@+id/a_disturbing_dv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/a_disturbing_toolbar" />

    <ImageView
        android:id="@+id/a_disturbing_cover_iv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#000000"
        android:visibility="gone" />

</RelativeLayout>